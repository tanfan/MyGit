.state > button {
	display: inline-block;
	margin: 0px;
	width: 120px;
	height: 50px;
	border: none;
	background-image: url(button-bg.png);
	border-radius: 7px;
	box-shadow: 2px 2px 2px #000000;
	font-size: 20px;
	font-weight: bold;
	color: #FFFFFF;
	text-shadow: 2px 2px 3px #333333;
}
.state span {
	font-size: xx-large;
