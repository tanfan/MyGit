html{
	width: 100%;
	height: 100%;
	overflow: hidden;
	padding: 0px;
	margin: 0px;
}
body{
	width: 100%;
	height: 100%;
	padding: 0px;
	margin: 0px;
	overflow: hidden;
	background-image: url(../img/back.png);
	background-size: 1280px 1024px;
}
@media only screen and (max-width: 1280px) {
		
	.header{
		width: 100%;
		height: 97px;
		background-image:url(../img/top-bg.png);
		background-repeat: repeat-x;
		overflow: hidden;
	}
	.header > div.title{
		height: 97px;
		line-height:97px;
		
		float: left;
		color: #FFFFFF;
		font-size: 24px;
		margin-left: 15px;
		font-weight: bold;
	}
	
	.header div.title > div > img{
		width: 32px;
		margin: 13px 5px 17px 0px;
		vertical-align:middle;
	}
	.header > div.button{
		height: 97px;
		line-height:97px;
		width: 110px;
		float: right;
		color: #FFFFFF;
		font-size: 24px;
		margin-left: 15px;
		font-weight: bold;
	}
	.header > div.button:active{
		opacity: 0.5;
	}
	
	.header div.button > div > img{
		width: 32px;
		margin: 13px 5px 17px 0px;
		vertical-align:middle;
	}		
	.content{
		width: 100%;
		margin: 0px auto 0px auto;
		overflow: hidden;
	}
	
}
		
@media only screen and (max-width: 768px) {
	.header{
		width: 100%;
		height: 97px;
		background-image:url(../img/top-bg.png);
		background-repeat: repeat-x;
		padding-left: 15px;
		padding-right: 15px;
		overflow: hidden;
	}
	.header > div.title{
		height: 97px;
		line-height:97px;
		
		float: left;
		color: #FFFFFF;
		font-size: 24px;
	}
	
	.header div.title > div > img{
		width: 32px;
		margin: 13px 5px 17px 0px;
		vertical-align:middle;
	}
	
	.header > div.button{
		height: 97px;
		line-height:97px;
		width: 110px;
		float: right;
		color: #FFFFFF;
		font-size: 24px;
	}
	
	.header > div.button:active{
		opacity: 0.5;
	}
	
	.header div.button > div > img{
		width: 32px;
		margin: 13px 5px 17px 0px;
		vertical-align:middle;
	}
	.content{
		width: 100%;
		margin: 0px auto 0px auto;
		overflow: hidden;
	}
		
}

.buttonbar {
	position: absolute;
	width: 100%;
	height: 60px;
	left: 0px;
	top:80%
}
.buttonbar > .pre{
	width: 80px;
	height: 80px;
	border: none;
	border-radius: 40px;
	background: url(../img/icon-left.png) no-repeat center,rgba(255,255,255,0.4);
	float: left;
}
.buttonbar > .pre:active{
	border:solid 2px #A12160;
}
.buttonbar > .next{
	width: 80px;
	height: 80px;
	border: none;
	border-radius: 40px;
	background: url(../img/icon-right.png) no-repeat center,rgba(255,255,255,0.4);
	float: right;
}
.buttonbar > .next:active{
	border:solid 2px #A12160;
}
.des-content{
	display: block;
	margin:0px 20px 15px 20px;
	padding:5px;
	background-color: rgba(255,255,255,0.4);
	border-radius: 7px;
	border: solid 1px #A12160;
	font-size: 18px;
}
.des-content ul{
	list-style: none;
	padding: 0px;
	margin: 0px;
	
}
