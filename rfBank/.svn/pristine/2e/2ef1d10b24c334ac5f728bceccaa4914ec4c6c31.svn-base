	@media only screen and (max-width: 1280px) {
		.applist> ul {
			list-style: none;
			padding: 0px;
			margin: 0px auto 0px 50px;
			width: 100%;
		}
		.applist>ul > li {
			list-style: none;
			vertical-align: top;
			text-align: center;
			display: inline-block;
			width: 80px;
			height: 130px;
			margin: 10px 30px 5px 30px;
			text-shadow: 0px 0px 2px silver;
			font-weight: bold;
			-webkit-border-radius: 20px;
		}
	}
	@media only screen and (max-width: 800px) {
		.applist> ul {
			list-style: none;
			padding: 0px;
			margin: 0px auto 0px 50px;
			width: 100%;
		}
		.applist>ul > li {
			list-style: none;
			vertical-align: top;
			text-align: center;
			display: inline-block;
			width: 80px;
			height: 130px;
			margin: 20px 30px 20px 30px;
			text-shadow: 0px 0px 2px silver;
			font-weight: bold;
			-webkit-border-radius: 20px;
		}
	}
	.applist ul > li:active {
		opacity: 0.6;
	}
	.applist ul > li > img {
		width: 80px;
		height: 80px;
		box-shadow: 2px 3px 3px silver;
		margin-left: 0px;
		margin-top: 20px;
		margin-bottom: 0px;
		-webkit-border-radius: 20px;
		-webkit-box-shadow: 0 0 1px #cfcfcf;
	}
	