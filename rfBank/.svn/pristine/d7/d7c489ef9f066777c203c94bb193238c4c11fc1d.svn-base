		<script type="text/javascript" src="../../script/tx.min.js"></script>
		<script type="text/javascript" src="../../script/iscroll/iscroll.js"></script>
		<script type="text/javascript">
			$(function() {
				//统一dialog高度
				var myscroll = new IScroll("#parent",{hScroll:false,vScroll:true,hScrollbar:false, vScrollbar:false});
				function reLayoutDialog() {
					var h = $(".content").height() - 80;
					$(".dialog > .dlg-content").css("height", h<400?400:h);
					//myscroll.destroy();
					//myscroll =  new IScroll("#parent",{hScroll:false,vScroll:true,hScrollbar:false, vScrollbar:false});
					myscroll.refresh();
				};
				$(window).resize(reLayoutDialog);
				reLayoutDialog();
			});
		</script>
		<title>个人信息</title>
		<script>
			txPage.onNext = function() {
				return true;
			}
			txPage.onPre = function() {
				return true;
			}
		</script>
		<style>
			.dlg-content {
				overflow: scroll;
			}
			.dlg-content > div {
				font-size: 20px;
				white-space: nowrap;
			}
			.dlg-content > div > div {
				display: inline-block;
				padding: 10px;
				text-shadow: 0px 0px 2px #FFFFFF;
			}
			.dlg-content input {
				border: none;
				border-radius: 5px;
				width: 200px;
				height: 30px;
				line-height: 30px;
				margin: 3px;
				font-size: 20px;
			}
			.dlg-content select {
				border: none;
				border-radius: 5px;
				width: 200px;
				height: 30px;
				line-height: 30px;
				margin: 3px;
				font-size: 20px;
			}
		</style>
