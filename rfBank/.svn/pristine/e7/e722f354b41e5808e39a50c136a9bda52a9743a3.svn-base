html{
	width: 100%;
	height: 100%;
	overflow: hidden;
}
body{
	width: 100%;
	height: 100%;
	padding: 0px;
	margin: 0px;
	overflow: hidden;
	background-image: url(../../img/back.png);
	background-size: 960px 600px;
}
@media only screen and (max-width: 960px) {
		
	.header{
		width: 100%;
		height: 97px;
		background-image:url(../../img/top-bg.png);
		background-repeat: repeat-x;
		overflow: hidden;
	}
	.header > div.title{
		height: 97px;
		line-height:97px;
		width: 110px;
		float: left;
		color: #FFFFFF;
		font-size: 24px;
		margin-left: 15px;
		font-weight: bold;
	}
	
	.header div.title > div > img{
		width: 32px;
		margin: 13px 5px 17px 0px;
		vertical-align:middle;
	}
	.header > div.button{
		height: 97px;
		line-height:97px;
		width: 110px;
		float: right;
		color: #FFFFFF;
		font-size: 24px;
		margin-left: 15px;
		font-weight: bold;
	}
	
	.header div.button > div > img{
		width: 40px;
		margin: 13px 5px 17px 0px;
		vertical-align:middle;
	}		
	.content{
		width: 100%;
		overflow: hidden;
	}
	.bottom button{
				padding: 10px;
				font-size: 24px;
			}
			
			.content > div.devlist{
				display: block;
				width: 15%;
				height: 420px;
				float:left;
				border: 1px solid #0000FF;
			}
			.content > div.devlist > div >button{
				padding: 10px;
				font-size: 15px;
			} 
			.devlist ul{
				list-style: none;
				margin: 0px;padding: 10px;
			}
			.devlist li{
				list-style: none;
				margin: 2px;
				padding: 0px;
				display: inline-block;
				height: 100px;
				width: 100px;
				white-space:nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
				text-align: center;
				line-height: 100px;
				
				background-image: -webkit-gradient(linear, center top, center bottom, from(deepskyblue), to(lightgreen));
				border-radius: 21px 21px 21px 21px;
			}
			.dev-selected{
				box-shadow: 0px 0px 10px blue;
			}
	
}
		
